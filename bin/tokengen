#!/usr/bin/env node
require("coffee-script/register")
var inquirer, jwt, jwtCfg;
inquirer = require("inquirer");
jwtCfg = require('../config').jwt;
jwt = require('jsonwebtoken');
inquirer.prompt([
  {
    type: 'list',
    name: 'type',
    message: 'Select token type',
    choices: [
      {
        name: 'Browser token',
        value: 'browser_token'
      }, {
        name: 'Client token',
        value: 'client_token'
      }
    ]
  },
  {
    type: 'list',
    name: 'period',
    message: 'Select token valid period',
    choices: [
      {
        name: '1 day',
        value: '1 day'
      }, {
        name: '7 days',
        value: '7 days'
      }, {
        name: '1 month',
        value: '30 days'
      }, {
        name: '3 months',
        value: '180 days'
      }, {
        name: '1 year',
        value: '1 year'
      }
    ]
  }
], function(answers) {
  var payload, token, options, secret;
  payload = {
    type: answers.type
  };
  options = {
    algorithm: answers.type === 'client_token' ? jwtCfg.clientToken.options.algorithm : jwtCfg.browserToken.options.algorithm,
    expiresIn: answers.period
  };
  secret = answers.type === 'client_token' ? jwtCfg.clientToken.secret : jwtCfg.browserToken.secret;
  token = jwt.sign(payload, secret, options);
  return console.log("Your token is:\n" + token);
});
